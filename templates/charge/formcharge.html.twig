{% extends 'base.html.twig' %}

{% block title %}Ajout de charge{% endblock %}

{% block containerClass %}container-fh l-2column{% endblock %}

{% block content %}
    <div class="m-content m-content__hb">
        <div class="m-content__header">
            <h4 class="m-content__heading">Charge</h4>
        </div>
        <div class="m-content__block">

            {% if charge and charge.attachment %}
                Pi√®ce jointe existante :
                <a href="{{ asset('attachment/' ~ charge.attachment) }}" target="_blank" class="link-info">Voir</a>
            {% endif %}

            {{ form_start(form,  { 'action': action, 'attr': {'class': 'm-content__body'} } ) }}
            {{ form_row(form.title) }}
            {% if not edit %}
                {{ form_row(form.amount) }}
            {% endif %}
            {{ form_row(form.deadline) }}
            {{ form_row(form.user) }}
            {{ form_row(form.contract) }}
            {{ form_row(form.attachment) }}
            {{ form_row(form._token) }}
            {{ form_row(form.save) }}
        </div>
    </div>
{% endblock %}